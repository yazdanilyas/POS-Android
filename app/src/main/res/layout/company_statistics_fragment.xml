<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.companyStatisticsFragment.CompanyStatisticsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/balanceCV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100dp"
        android:layout_marginStart="@dimen/_4dp"
        android:layout_marginTop="@dimen/_4dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_4dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:padding="@dimen/_10dp"
        app:cardCornerRadius="@dimen/_5dp"
        app:cardElevation="@dimen/_4dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/_18dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/balanceText"
                style="@style/headingTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_add_product"
                android:text="@string/balance"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/balanceText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Rs. 50000/-"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/balanceCV">

        <androidx.cardview.widget.CardView
            android:id="@+id/saleCV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100dp"
            android:layout_marginStart="@dimen/_4dp"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_4dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="@dimen/_10dp"
            app:cardCornerRadius="@dimen/_5dp"
            app:cardElevation="@dimen/_4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/_18dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/saleImg"
                    style="@style/headingTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35dp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/sale"
                    android:textColor="@color/colorRed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/saleImg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Rs. 30000/-"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/purchaseCv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100dp"
            android:layout_marginStart="@dimen/_4dp"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_4dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="@dimen/_10dp"
            app:cardCornerRadius="@dimen/_5dp"
            app:cardElevation="@dimen/_4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/_18dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/purchaseImg"
                    style="@style/headingTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35dp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/purchase"
                    android:textColor="@color/purple_700" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/purchaseImg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Rs. 30000/-"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0dp"
        android:layout_margin="@dimen/_10dp"
        app:cardCornerRadius="@dimen/_5dp"
        app:cardElevation="@dimen/_4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/idBarChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>